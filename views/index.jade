doctype html
html(lang="en")
  head
    title News Weather App
    link(rel='stylesheet', href='/styles/main.css')
  body
      div.nw-wrapper
        h1 News Weather App
        div.nw-weather-btns
          a.nw-btn(href='/weather/sydney') Forecast for Sydney
          a.nw-btn(href='/weather/brisbane') Forecast for Brisbane
          a.nw-btn(href='/weather/sydney/tuesday') Forecast for Sydney on Tuesday (TODO)
          a.nw-btn(href='/weather/sydney/today') Forecast for Sydney today (TODO)

        //- since I'm passing my variables as the value of a 'data' property, all vars will start with data.
        h2=data.title

        table.nw-table
          tr
            td Location
            td=data.location
          tr
            td Date
            td=data.date
          tr
            td Temp
            td=data.temp + 'Â°C'
          tr
            td Summary
            td=data.summary


    script(src='/scripts/main.js')